doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")


    each cssFile in assetsManifest.css
      link(rel="stylesheet", href=cssFile)

    each jsFile in assetsManifest.js
      script(src=jsFile async)

    title Shop
  body
    nav
      ul
        li
          a(href="/") Home
        li
          a(href="/products") Products
        li
          a(href="/ordering") Orders

      a(href="/ordering/basket") Shopping Basket
    main
      block content
